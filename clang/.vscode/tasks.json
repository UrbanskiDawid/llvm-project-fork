{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make clang-format -j 8",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceRoot}/../build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test full",
            "type": "shell",
            "command": "make check-clang-format -j 8",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceRoot}/../build"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "command": "grep -Ev '// *[A-Z-]+:' test/Format/adjust-operators.cpp | ../build/bin/clang-format -style='{SpaceBeforeAndAfterOperator: SpaceBeforeAndAfter}' -lines=1:1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": "test",
            "problemMatcher": [],

            "dependsOn": ["build"]
        }
    ]
}